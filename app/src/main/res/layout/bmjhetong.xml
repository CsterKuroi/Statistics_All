<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:dividerPadding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bmjhtheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="3dp"
            android:text="合同："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjbfname1"
            />
        <TextView
            android:paddingLeft="3dp"
            android:text="金额："

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjbfplace1"
            />
        <TextView
            android:paddingLeft="3dp"
            android:text="日期："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjbfdate1"
            />
        <TextView
            android:paddingLeft="3dp"
            android:text="客户："

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjbftarget1"
            />
        <TextView
            android:paddingLeft="3dp"
            android:text="创建人："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjbfcreater1"
            />


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjhtname"
            />
        <TextView
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjhtmoney"
           />
        <TextView
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjhtdate"
             />
        <TextView
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjhttarget"
             />
        <TextView
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmjhtcreater"
            />


    </LinearLayout>



</LinearLayout>